<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Course</title>
</head>
<body>
    <h1>Edit Course</h1>
    <form action="/course/edit/<%= course.id %>" method="POST">
        <label for="name">Course Name:</label>
        <input type="text" id="name" name="name" value="<%= course.name %>" required><br><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= course.description %></textarea><br><br>

        <label for="rating">Rating:</label>
        <input type="number" step="0.1" id="rating" name="rating" value="<%= course.rating %>" required><br><br>

        <label for="college_id">College:</label>
        <select id="college_id" name="college_id" required>
            <% colleges.forEach(college => { %>
                <option value="<%= college.id %>" <% if (college.id === course.college_id) { %>selected<% } %>><%= college.name %></option>
            <% }) %>
        </select><br><br>

        <button type="submit">Update Course</button>
    </form>
    <a href="/course/id/<%= course.id %>">Back to Course Details</a>
</body>
</html>